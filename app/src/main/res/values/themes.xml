<resources>
    <!-- Base application theme. -->
    <style name="Theme.BingeTV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_color_splash</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_app</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.BingeTV</item>
    </style>

    <style name="BingeTV.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">17sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="BingeTV.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView_Genre" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/avenir_next_demi_bold</item>
        <item name="android:textColor">@color/details_network_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_empty_item</item>
    </style>

    <!-- Home -->
    <style name="Toolbar.TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontFamily">@font/avenir_next_demi_bold</item>
    </style>

    <style name="BottomNavigationView.Style" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottom_navigation_view_background_color</item>
        <item name="itemBackground">@color/bottom_navigation_view_background_color</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_view</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_view</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearance">@style/BottomNavigationView.Style.TextAppearance</item>
    </style>

    <style name="BottomNavigationView.Style.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">@dimen/bottom_navigation_view_text_size</item>
    </style>

    <style name="Title.TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontFamily">@font/avenir_next_demi_bold</item>
        <item name="android:textColor">@color/category_title_text_color</item>
    </style>


</resources>