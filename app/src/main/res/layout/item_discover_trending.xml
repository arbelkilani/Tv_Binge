<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tv"
            type="com.arbelkilani.binge.tv.feature.discover.domain.entities.TrendingEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@{tv.name}"
            android:scaleType="centerCrop"
            app:src="@{tv.backdrop}"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/item_discover_name_background"
            android:fontFamily="@font/avenir_next_medium"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@{tv.name}"
            android:textColor="@color/details_network_text_color"
            android:textSize="12sp" />

    </com.google.android.material.card.MaterialCardView>
</layout>