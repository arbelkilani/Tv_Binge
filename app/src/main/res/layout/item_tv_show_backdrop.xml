<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tv"
            type="com.arbelkilani.binge.tv.feature.discover.presentation.model.Tv" />
    </data>


    <com.arbelkilani.binge.tv.common.ui.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="background"
        app:cardCornerRadius="@dimen/medium_corner_radius"
        app:cardElevation="@dimen/default_card_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/grp_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_date,tv_genres,tv_title" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@{tv.name}"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src="@{tv.backdrop}"
                tools:src="@drawable/ic_launcher_background" />

            <View
                android:id="@+id/view_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_mask" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:maxLines="1"
                android:text="@{tv.name}"
                android:textColor="@color/anti_flash_white"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/tv_genres"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent=".8"
                tools:text="Pokemon" />

            <TextView
                android:id="@+id/tv_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:fontFamily="@font/avenir_next_regular"
                android:maxLines="1"
                android:textColor="@color/anti_flash_white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_date"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SmallSp"
                tools:text="Animation - Horror - Comedy" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:fontFamily="@font/avenir_next_regular"
                android:text="@{tv.firstAirDate}"
                android:textColor="@color/anti_flash_white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_genres"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_genres"
                tools:ignore="SmallSp"
                tools:text="2023-01-01" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.arbelkilani.binge.tv.common.ui.CustomCardView>

</layout>